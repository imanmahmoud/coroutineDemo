<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProductsMVVM"
        tools:targetApi="31">
        <activity
            android:name=".favProducts.FavProductsActivity"
            android:exported="false"
            android:label="@string/title_activity_fav_products"
            android:theme="@style/Theme.ProductsMVVM" />
        <activity
            android:name=".allProducts.AllProductsActivity"
            android:exported="false"
            android:label="@string/title_activity_all_products"
            android:theme="@style/Theme.ProductsMVVM" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProductsMVVM">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>